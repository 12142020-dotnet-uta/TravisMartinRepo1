@model ModelLayer.ViewModels.StoreViewModel

@{
    ViewData["Title"] = "ChooseStores";
}

<h1>Stores</h1>

<h4>StoreViewModel</h4>
<hr />

@using (Html.BeginForm("StoreOrderHistory", "Store", FormMethod.Post))
{
    <div class="form-group">
        @Html.AntiForgeryToken()
        @Html.Hidden("Location", Model.Location)
        @Html.DropDownListFor(m => m.LocationId, new SelectList(Model.storesList, "LocationId", "Location"), "Please Choose a Store", new { @id = "LocID" })
        @*<select asp-for="Location" asp-items="Model.storesList"> </select>*@
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
}

@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $("#LocID").change(function (evt) {
                $("#Location").val($("#LocID option:selected").text().trim());
            });
        });
    </script>
}